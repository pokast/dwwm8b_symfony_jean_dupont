{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Requête de réinitialisation du mot de passe{% endblock %}

{% block description %}Requête de réinitialisation du mot de passe{% endblock %}

{% block main %}

    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-center my-3 display-5">Réinitialisation du mot de passe</h1>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 col-lg-6 mx-auto p-4 shadow bg-white">
                {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email, {'attr': {'class': 'form-control'}}) }}
                    <div class="mt-1">
                        <small >
                            Entrez votre adresse email et nous vous enverrons 
                            un lien pour la réinitialisation de votre mot de passe.
                        </small>
                    </div>
                    <div class="mt-3">
                      <button class="btn btn-primary">Envoyer</button>
                    
                    </div>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>

{% endblock %}
